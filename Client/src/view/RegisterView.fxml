<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="447.0" prefWidth="600.0" styleClass="background" stylesheets="@../CSS/Common.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.RegisterViewController">
    <children>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label prefHeight="30.0" prefWidth="117.0" text="Username: " textFill="WHITE">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="userNameField" onAction="#OnEnterUser">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                    <font>
                        <Font size="20.0" />
                    </font>
                </TextField>
            </children>
        </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Displayname:" textFill="WHITE">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="displayNameField" onAction="#OnEnterDisplay">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
         </children>
      </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label prefHeight="30.0" prefWidth="117.0" text="Password: " textFill="WHITE">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="passwordField" accessibleRole="PASSWORD_FIELD" onAction="#OnEnterPass">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                    <font>
                        <Font size="20.0" />
                    </font>
                </TextField>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="42.0" prefWidth="600.0">
            <children>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#PressRegisterButton" text="Register" textAlignment="CENTER">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
            </children>
        </HBox>
        <HBox alignment="CENTER" layoutX="10.0" layoutY="278.0" prefHeight="42.0" prefWidth="600.0">
            <children>
                <Label text="Do you already have an account?" textFill="WHITE">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Label>
                <Hyperlink fx:id="linkLabel" onAction="#LoginAccount" text="Press here to login!" textFill="#f6a3ff">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Hyperlink>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="29.0" prefWidth="600.0">
            <children>
                <Label fx:id="errorLabel" text="Error" textFill="RED">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </children>
</VBox>
